{
    "name": "unamatasanatarai/borrow",
    "description": "Borrow",
    "license": "MIT",
    "require":{
        "phpunit/phpunit": "~4.6"
    },
    "require-dev": {
        "unamatasanatarai/borrow-framework": "dev-master",
        "unamatasanatarai/phputils": "dev-master"
    },
    "autoload": {
        "classmap": [
            "app/resources/controllers/"
        ]
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/unamatasanatarai/borrow-framework.git"
        },
        {
            "type": "vcs",
            "url": "https://github.com/unamatasanatarai/phputils"
        }
    ],
    "scripts": {
        "post-install-cmd": [
            "npm install"
        ],
        "post-update-cmd": [
            "npm install"
        ]
    },
    "minimum-stability": "dev"
}
